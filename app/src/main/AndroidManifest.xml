<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasswordManagerV1"
        tools:targetApi="31">
        <activity
            android:name=".ImportExportActivity"
            android:exported="false"
            android:label="@string/activity_label_import_export_data"
            android:parentActivityName=".MainActivity"
            >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".SearchByFieldActivity"
            android:exported="false"
            android:label="@string/activity_label_search_by_field">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".EditMiscActivity"
            android:exported="false"
            android:label="@string/activity_label_edit_misc"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".EditLinkedAccountsActivity"
            android:exported="false"
            android:label="@string/activity_label_edit_linked_accounts">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".EditStringActivity"
            android:exported="false"
            android:label="@string/activity_label_edit_entry_prefix"
            android:parentActivityName=".AccountDetailsActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".SearchByAccountNameActivity"
            android:exported="false"
            android:label="@string/activity_label_search_by_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AccountDetailsActivity"
            android:exported="false"
            android:label="@string/activity_label_account_details"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".SetupActivity"
            android:exported="false"
            android:label="@string/activity_label_setup"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".SecurityActivity"
            android:exported="true"
            android:label="@string/activity_label_login"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>